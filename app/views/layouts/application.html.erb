<!DOCTYPE html>
<html>
<head>
  <%= javascript_include_tag 'application' %>
  <%= csrf_meta_tag %>
</head>
<body>
  <div id="header">
    <% if signed_in? -%>
      Logged in as <%= current_user.first_name %> <%= current_user.last_name %>
      <%= button_to t(".sign_out"), sign_out_path, method: :delete %>
    <% else -%>
      <%= link_to t(".sign_in"), sign_in_path %>  
      <%= link_to t(".sign_up"), sign_up_path %>
    <% end -%>

    <%= button_to "Browse all Users", users_index_path, method: :get %>

    <%= button_to "Your Profile", profile_path, method: :get %>
  </div>

  <div id="flash">
    <% flash.each do |key, value| -%>
      <div id="flash_<%= key %>"><%=h value %></div>
    <% end %>
  </div>

  <%= yield %>
</body>
</html>
 