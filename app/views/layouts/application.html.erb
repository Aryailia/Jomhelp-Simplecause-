<!DOCTYPE html>
<html>
<head>
  <%= stylesheet_link_tag 'application' %>
  <%= javascript_include_tag 'application' %>
  <%= csrf_meta_tag %>
</head>
<body>
  <header>
    <nav class="navbar navbar-toggleable-md navbar-light bg-faded">
      <button class="navbar-toggler navbar-toggler-right" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <%= link_to('Jomhelp', root_path, class: 'navbar-brand') %>

      <div class="collapse navbar-collapse" id="navbarNav">
        <ul class="navbar-nav mr-auto">
          <% {Home: root_path, Profile: '#', Organisation: '#', Blah: sign_in_path}.each do |body, link| %>
            <% isCurrent = current_page?(link) %>
            <li class="<%= (isCurrent) ? 'nav-link active' : 'nav-link' %>">
              <%= link_to(link, class: 'nav-link') do -%>
                <%= raw body %><% if isCurrent %> <span class="sronly">(current)</span><% end %>
              <% end %>
            </li>
          <% end %>
        </ul>
        <form class="form-inline my-2 my-lg-0">
          <input class="form-control mr-sm-2" type="text" placeholder="Search">
          <button class="btn btn-outline-success my-2 my-sm-0" type="submit">Search</button>
        </form>
      </div>
    </nav>

    <nav id="header">
      <% if signed_in? -%>
        <%= button_to t(".sign_out"), sign_out_path, method: :delete %>
      <% else -%>
        <%= link_to t(".sign_in"), sign_in_path %>
      <% end -%>
    </nav>

    <div id="flash">
      <% flash.each do |key, value| -%>
        <div id="flash_<%= key %>"><%=h value %></div>
      <% end %>
    </div>
  </header>
  
  <section>
    <%= yield %>
  </section>
</body>
</html>
 