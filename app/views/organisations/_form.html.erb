<div class="form-group">
  <%= form_with(model: organisation, local: true) do |form| %>
    <% if organisation.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(organisation.errors.count, "error") %> prohibited this organisation from being saved:</h2>

        <ul>
        <% organisation.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
        </ul>
      </div>
    <% end %>

    <div class="actions">
      <div class="form-group">
        <%= form.label :Organisation_Name %>
        <%= form.text_field :name, type: "text", :class => "form-control" %>
      </div>

      <div class="form-group">
        <%= form.label :Address %>
        <%= form.text_field :address, type: "text", :class => "form-control" %>
      </div>

      <div class="form-group">
        <%= form.label :City %>
        <%= form.text_field :city, type: "text", :class => "form-control" %>
      </div>

      <div class="form-group">
        <%= form.label :Postcode %>
        <%= form.text_field :postcode, type: "text", :class => "form-control" %>
      </div>

      <div class="form-group">
        <%= form.label :Description %>
        <%= form.text_field :description, type: "text", :class => "form-control" %>
      </div>

      <div class="form-group">
        <%= form.label :photos %> <br>
        <%= form.file_field :photos, multiple: true %>
      </div>

      <%= form.submit 'Update Orgnisation Profile', :class => "btn btn-outline-success", :display => "inline", :float => "left" %>
    </div>
  <% end %>
</div>

 
