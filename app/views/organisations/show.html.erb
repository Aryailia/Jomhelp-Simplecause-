<p id="notice"><%= notice %></p>

<h1><%= @organisation.name %></h1>
<h1><%= @organisation.description %></h1>
<% if contributor?(@organisation) %>

	<% if @contributor.admin?%>
		<%= link_to 'Edit', edit_organisation_path(@organisation) %> 
		<%= link_to 'Destroy', @organisation, method: :delete, data: { confirm: 'Are you sure?' } %>
		<%= link_to 'View Contributors', organisation_contributors_path(@organisation) %>
	<% end %>
<% end %>

<%= link_to 'Back', organisations_path %>


	