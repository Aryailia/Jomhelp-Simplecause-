<h1><%= @organisation.name %></h1>
<h1><%= @organisation.description %></h1>
<% if contributor?(@organisation) %>

	<% if @contributor.admin?%>
		<%= link_to 'Edit', edit_organisation_path(@organisation) %> 
		<%= link_to 'Destroy', @organisation, method: :delete, data: { confirm: 'Are you sure?' } %>
		<%= link_to 'View Contributors', organisation_contributors_path(@organisation) %>
	<% end %>
<% end %>

<%= link_to 'Back', organisations_path %>

<% if current_user.organisations.find_by(id: @organisation.id).nil? %>
	<%= button_to 'Follow', organisation_follow_path(@organisation.id) %>
<% else %>
	<%= button_to 'Unfollow', organisation_unfollow_path(@organisation.id)%>
<% end %>

<%= form_for @post, url: [@organisation, @post] do |f| %>
	post post_path
 	<h4>Status:</h4>
 	<%= f.text_area :content %><br>
 	<br>
	<br>
	<%= f.submit %></br>

<% byebug %>
<% @organisation.posts each do |o| %>

<%= o.content %>
<% end %>
 <% end %>