<div class = 'container '>
  <p id="notice"><%= notice %></p>

  <h1>Organisations</h1>

  <% @organisations.each_slice(3) do |organisation| %>
    <div class ="row" >
      <% organisation.each do |t| %>
        <div class = "col" >
          <div class="card" style="width: 300px;">
            <% if t.photos.length == 0 %>
              <%= image_tag "/assets/no-img.png", :class => "card-img-top" %>
            <% else %>
              <%= image_tag t.photos[0].thumb, :class => "card-img-top" %>
            <% end %>
            <div class="card-block">
              <h4 class="card-title"><%= link_to t.name.capitalize, organisations_path %></h4>
              <p class="card-text"><%= t.description.capitalize %></p>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  <% end %>

  <%= will_paginate @posts %>


  <% if signed_in? %>
    <%= link_to 'New Organisation', new_organisation_path %>
  <% end %>
  
</div>