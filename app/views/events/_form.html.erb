<%= form_with(model: event, local: true, url: [@organisation, @event]) do |form| %>
  <% if event.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(event.errors.count, "error") %> prohibited this event from being saved:</h2>

      <ul>
      <% event.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="text_field">
    <%= form.label :name %>
    <%= form.text_field :name, type: "text" %>
  </div>

  <div class="text_field">
    <%= form.label :Address %>
    <%= form.text_field :address, type: "text" %>
  </div>

  <div class="text_field">
    <%= form.label :City %>
    <%= form.text_field :city, type: "text" %>
  </div>

  <div class="text_field">
    <%= form.label :Postcode %>
    <%= form.text_field :postcode, type: "text" %>
  </div>

  <div class="field">
    <%= form.label :start_date %>
    <%= form.datetime_select :start_date, id: :event_start_date %>
  </div>

  <div class="field">
    <%= form.label :end_date %>
    <%= form.datetime_select :end_date, id: :event_end_date %>
  </div>

  <div class="photos-field">
    <%= form.label :photos %>
    <%= form.file_field :photos, multiple: true %>
  </div>

  <!--<div class="field">
    <%= form.label :longitude %>
    <%= form.text_field :longitude, id: :event_longitude %>
  </div>

  <div class="field">
    <%= form.label :latitude %>
    <%= form.text_field :latitude, id: :event_latitude %>
  </div>-->
  
  <%= form.hidden_field(:organisation_id, :value => params[:organisation_id]) %>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
